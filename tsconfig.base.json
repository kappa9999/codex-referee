{
  "compilerOptions": {
    "target": "ES2023",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2023"],
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "useUnknownInCatchVariables": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@referee/core": ["packages/core/src/index.ts"],
      "@referee/git": ["packages/git/src/index.ts"],
      "@referee/runner": ["packages/runner/src/index.ts"],
      "@referee/eval": ["packages/eval/src/index.ts"],
      "@referee/rank": ["packages/rank/src/index.ts"],
      "@referee/store": ["packages/store/src/index.ts"],
      "@referee/report": ["packages/report/src/index.ts"],
      "@referee/schemas": ["packages/schemas/src/index.ts"],
      "@referee/cli": ["packages/cli/src/main.ts"]
    }
  }
}
